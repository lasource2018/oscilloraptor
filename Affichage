from tkinter import *
from tkinter import filedialog

def selec_fichier():
    main.filename =  filedialog.askopenfilename(initialdir = "/",title = "Sélection du fichier audio",filetypes = (("audio files","*.*"),("all files","*.*")))
    Filename.delete(0.0, END)
    Filename.insert(END, main.filename)
    
main = Tk()
main.title("oscilloraptorz")
main.configure(background="white")
Label (main, text="Analyseur de spectre sonore :", bg="white", fg="black", font="none 15 bold") .grid(row=1, column=1, sticky=NW)

#fenêtre de droite
Parametres = LabelFrame(main, bg="white", bd=2, height=400)
Parametres.grid(row=2, column=1, sticky=NW, pady=15, padx=10)

#Importation du fichier
Filename = Text(Parametres, width = 35, height=1, wrap=WORD, bg="white", fg="blue")
Filename.grid(row=3, column=1, sticky=NW, pady=5, padx=8)
Button(Parametres, text="IMPORTER", width=12, command=selec_fichier) .grid(row=4, column=1, sticky=NW, padx=8, pady=5)


#Affichage en Diese ou en bémol
Diese = IntVar()
Diese.set(1)
Di = Radiobutton(Parametres, text='#', value=1, variable=Diese)
Di.grid(row=6, column=1, sticky=W, padx=4, pady=5)
Label (Parametres, text="<-- Dièse / Affichage / Bémol -->", bg="lightgrey") .grid(row=6, column=1, padx=4, pady=5)
Be = Radiobutton(Parametres, text='b', value=0, variable=Diese)
Be.grid(row=6, column=1, sticky=E, padx=4, pady=5)

#Affichage des intervalles et des notes
InterNote = LabelFrame(Parametres, bg="white", text="Intervalle", bd=0)
InterNote.grid(row=7, column=1, sticky=W, padx=4, pady=15)
PrintInter = Sortie(FreqNoteJuste)
Label(InterNote, text=PrintInter).grid(row=1, column=1, sticky=W, padx=4, pady=7)
NomNotes = LabelFrame(Parametres, bg="white", text="Notes détectées", bd=0)
s = " - "
Label(InterNote, text= s.join(ListeNote)).grid(row=2, column=1, sticky=W, padx=4, pady=7)


#Fenêtre de gauche (les graphiques)
Graphs = Frame(main, height=400, width=550, bg="white")
Graphs.grid(row=2, column=2, pady = 15, padx=15)
p = PanedWindow(Graphs, orient="vertical")
p.grid(row=2, column=1)
p.add(Label(p, text="sf qsf qsff qsfqsf qsf azd za zsd", bg="black"))
p.add(Label(p, text="2", bg="blue"))

main.mainloop()
